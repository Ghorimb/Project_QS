<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".Login">

    <Button
            android:id="@+id/login"
            android:layout_width="193dp"
            android:layout_height="37dp"
            android:text="Login"
            android:layout_below="@id/password" android:layout_marginTop="26dp" android:layout_alignParentStart="true"
            android:layout_marginStart="102dp" android:layout_centerHorizontal="true"/>
    <EditText
            android:id="@+id/password"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:layout_below="@id/username" android:layout_marginTop="0dp" android:layout_alignParentStart="true"
            android:layout_marginStart="24dp" android:layout_centerHorizontal="true"/>
    <EditText
            android:id="@+id/username"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:hint="Username" android:layout_alignParentStart="true" android:layout_alignParentTop="true"
            android:layout_marginTop="365dp" android:layout_marginStart="24dp" android:layout_centerHorizontal="true"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:srcCompat="@tools:sample/avatars"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="177dp"
            android:id="@+id/imageView"/>

</RelativeLayout>
